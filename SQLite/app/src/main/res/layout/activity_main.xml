<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:text="MSSV:"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/hoten"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginBottom="-80dp"
        android:text="Họ và tên:"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hoten"
        android:layout_marginBottom="-68dp"
        android:text="Địa chỉ:"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/email"
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_marginBottom="-75dp"
        android:text="Email:"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/edmssv"
        android:layout_width="205dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_marginEnd="-225dp"
        android:layout_marginRight="-225dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/edhovaten"
        android:layout_width="207dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/hoten"
        android:layout_alignRight="@+id/hoten"
        android:layout_alignBottom="@+id/edmssv"
        android:layout_marginEnd="-224dp"
        android:layout_marginRight="-224dp"
        android:layout_marginBottom="-80dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/eddiachi"
        android:layout_width="207dp"
        android:layout_height="51dp"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignBottom="@+id/edhovaten"
        android:layout_marginEnd="-222dp"
        android:layout_marginRight="-222dp"
        android:layout_marginBottom="-68dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="10sp" />

    <EditText
        android:id="@+id/edemail"
        android:layout_width="202dp"
        android:layout_height="47dp"
        android:layout_alignEnd="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_alignBottom="@+id/eddiachi"
        android:layout_marginEnd="-219dp"
        android:layout_marginRight="-219dp"
        android:layout_marginBottom="-73dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="10sp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="159dp"
        android:layout_height="49dp"
        android:layout_alignEnd="@+id/update"
        android:layout_alignRight="@+id/update"
        android:layout_alignBottom="@+id/viewall"
        android:layout_marginEnd="-175dp"
        android:layout_marginRight="-175dp"
        android:layout_marginBottom="-64dp"
        android:text="Delete"
        android:textSize="14sp" />

    <Button
        android:id="@+id/add"
        android:layout_width="181dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/email"
        android:layout_marginBottom="-68dp"
        android:text="Add data"
        android:textSize="14sp" />

    <Button
        android:id="@+id/viewall"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:layout_alignEnd="@+id/add"
        android:layout_alignRight="@+id/add"
        android:layout_alignBottom="@+id/add"
        android:layout_marginEnd="-181dp"
        android:layout_marginRight="-181dp"
        android:layout_marginBottom="0dp"
        android:text="View All"
        android:textSize="14sp" />

    <Button
        android:id="@+id/update"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/add"
        android:layout_marginBottom="-63dp"
        android:text="Update"
        android:textSize="14sp" />

</RelativeLayout>